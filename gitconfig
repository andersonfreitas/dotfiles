[user]
	name = Anderson Freitas
	email = anderson.amf@gmail.com
	signingkey = CA9971C0
[color]
	status = auto
	branch = auto
	ui = auto
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse
[color "status"]
  added = yellow
  changed = red
  untracked = cyan black
  branch = yellow reverse bold
[color "branch"]
  current = green black
  local = yellow
  remote = magenta
[core]
	editor = $EDITOR
	quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
[diff]
	tool = Kaleidoscope
[merge]
	tool = Kaleidoscope
[alias]
	difftool = difftool --no-prompt
	mergetool = mergetool --no-prompt
	oneline = log --pretty=oneline
	co = checkout
	br = branch
  la = log --pretty='format:%ad %h (%an): %s' --date=short --graph --all
  st = status -sb
  unstage = reset HEAD
  staged = diff HEAD
  l = "!source ~/.dotfiles/githelpers && pretty_git_log"
[push]
  default = current
[help]
  autocorrect = 1
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
